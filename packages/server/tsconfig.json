{
   "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "strict": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
         "*": [
            "node_modules/*"
         ]
      }
   },
   "ts-node": {
      "files": true
   },
   "include": [
      "src/**/*"
   ]
}
